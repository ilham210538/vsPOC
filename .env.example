# Azure AI Foundry project (Agents and models)
PROJECT_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project-name
MODEL_DEPLOYMENT_NAME=gpt-4o

# Graph app-only credentials (client secret flow)
GRAPH_TENANT_ID=your-tenant-id
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret

USE_MANAGED_IDENTITY=false

# Whose calendar? For personal use, set your own UPN (can be overridden per call)
DEFAULT_USER_UPN=your-email@company.com

# Time zone to present results (Windows name). For SG: "Singapore Standard Time"
DEFAULT_TZ=Singapore Standard Time

# Logic App Integration (NEW - for approval workflows)
LOGIC_APP_HTTP_URL=https://your-logic-app.azurewebsites.net:443/api/your-trigger/invoke?api-version=2022-05-01&sp=...

# Callback service configuration
CALLBACK_BASE_URL=http://localhost:5000
CALLBACK_PORT=5000
